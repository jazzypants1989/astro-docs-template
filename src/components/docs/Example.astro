<button class="example m-3 rounded-2xl bg-blue-700 p-4 text-white"
  >Click me! It's fun!</button
>

<script>
  const button = document.querySelector(".example")
  let count = 0

  if (button !== null) {
    button.addEventListener("click", () => {
      count++
      button!.innerHTML = `Count: ${count}`
    })
  }
</script>
